<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- MIDI Event Display Container - Always visible -->
    <LinearLayout
        android:id="@+id/midiEventContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:background="#F0F0F0"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MIDI Key Information"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/midiEventInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No MIDI events received"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/midiNoteInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Note: -"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/midiVelocityInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Velocity: -"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/midiChannelInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Channel: -"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/activeNotesInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Active Notes: 0"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Toggle button for controls - Always visible -->
    <ImageButton
        android:id="@+id/toggleControlsButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@android:drawable/ic_menu_manage"
        android:background="@drawable/rounded_button"
        android:contentDescription="Toggle Controls"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Controls Container - Initially hidden -->
    <LinearLayout
        android:id="@+id/controlsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:visibility="gone"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Connection status indicator -->
        <TextView
            android:id="@+id/connectionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Disconnected"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Scan button -->
        <Button
            android:id="@+id/scanButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scan for USB Devices"
            android:layout_marginTop="8dp" />

        <!-- Device list -->
        <ListView
            android:id="@+id/deviceList"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="8dp" />

        <!-- Device details -->
        <TextView
            android:id="@+id/deviceDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="No device selected"
            android:textSize="14sp" />
    </LinearLayout>
    
    <!-- Debug Container - initially hidden -->
    <LinearLayout
        android:id="@+id/debugContainer"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#F0F0F0"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/controlsContainer">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Debug Log"
                android:textStyle="bold" />
                
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />
                
            <Button
                android:id="@+id/btnClearLog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear"
                android:textSize="12sp"
                style="@style/Widget.MaterialComponents.Button.TextButton" />
        </LinearLayout>
        
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <TextView
                android:id="@+id/tvDebugLog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:textSize="10sp"
                android:textColor="#000000"
                android:text=""
                tools:text="Debug log entries will appear here" />
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout> 