<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Placeholder for staff view -->
    <FrameLayout
        android:id="@+id/staffViewContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toTopOf="@id/deviceControlsContainer"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Device controls container -->
    <LinearLayout
        android:id="@+id/deviceControlsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toTopOf="@id/midiEventContainer">

        <!-- Connection status indicator -->
        <TextView
            android:id="@+id/connectionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disconnected"
            android:textSize="16sp"
            android:gravity="center" />

        <!-- Scan button -->
        <Button
            android:id="@+id/scanButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scan for USB Devices"
            android:layout_marginTop="8dp" />

        <!-- USB Mode Settings button -->
        <Button
            android:id="@+id/usbModeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="USB Mode Settings"
            android:layout_marginTop="8dp" />

        <!-- Device list -->
        <ListView
            android:id="@+id/deviceList"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="8dp" />

        <!-- Device details -->
        <TextView
            android:id="@+id/deviceDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="No device selected"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- MIDI Event Display Container -->
    <LinearLayout
        android:id="@+id/midiEventContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:background="#F0F0F0"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@id/chordDisplayContainer">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MIDI Key Information"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center" />

        <!-- Test MIDI Button -->
        <Button
            android:id="@+id/testMidiButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test MIDI (Send C4 Note)"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/midiEventInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No MIDI events received"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/midiNoteInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Note: -"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/midiVelocityInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Velocity: -"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/midiChannelInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Channel: -"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/activeNotesInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Active Notes: 0"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Placeholder for chord display -->
    <FrameLayout
        android:id="@+id/chordDisplayContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout> 